<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ReelTalk"
        parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>

        <item name="android:statusBarColor">#00000000</item>

    </style>

    <!-- Custom styles (Text Appearances) for TextViews with custom font -->
    <style name="TitleH1">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/highEmphasis</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>
    <style name="TitleH2">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/highEmphasis</item>
        <item name="android:letterSpacing">0.008</item>
    </style>

    <style name="TitleH3">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/highEmphasis</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <style name="Headline">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/highEmphasis</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mediumEmphasis</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subheadline">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/mediumEmphasis</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/mediumEmphasis</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="PreText">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/mediumEmphasis</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


    <!-- Custom styles for Material Buttons -->
    <style name= "MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAppearance">@style/Headline</item>
    </style>

    <style name="MaterialButtonStyleDisabled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
        <item name="android:textColor">@color/disabled</item>
    </style>

    <style name= "MaterialButtonStyleTransparent" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/secondSurface</item>
        <item name="android:textColor">@color/highEmphasis</item>
        <item name="android:textAppearance">@style/Headline</item>
    </style>

    <!-- Custom style for Chips -->
    <style name= "ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/Headline</item>
        <item name="android:backgroundTint">@color/thirdSurface</item>
        <item name="android:textColor">@color/highEmphasis</item>
    </style>
</resources>